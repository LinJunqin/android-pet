<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_selector"
    android:padding="5dp">

    <ImageView
        android:id="@+id/store_face"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/store_name"
        android:layout_marginLeft="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/store_avatar_default" />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/store_face"
        android:text="美国VCA宠物医院"
        android:textColor="@android:color/background_dark"
        android:textSize="15dp" />

    <com.xp.stardemo.StarLinearLayout
        android:id="@+id/store_score_txt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/store_face"
        app:isEdit="true" />

    <TextView
        android:id="@+id/store_score_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_name"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/store_score_txt"
        android:text="4.55分"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/store_tag_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_score_txt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/store_face"
        android:background="@drawable/store_shape_store_tag"
        android:padding="2dp"
        android:text="美容"
        android:textColor="@color/gray_dark"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/store_tag_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_score_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/store_tag_1"
        android:background="@drawable/store_shape_store_orange_tag"
        android:padding="2dp"
        android:text="洗澡"
        android:textColor="@color/orange"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/store_tag_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_score_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/store_tag_2"
        android:background="@drawable/store_shape_store_tag"
        android:padding="2dp"
        android:text="剃毛"
        android:textColor="@color/gray_dark"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/store_tag_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_score_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/store_tag_3"
        android:background="@drawable/store_shape_store_tag"
        android:padding="2dp"
        android:text="洁牙"
        android:textColor="@color/gray_dark"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/store_tag_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_score_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/store_tag_4"
        android:background="@drawable/store_shape_store_tag"
        android:padding="2dp"
        android:text="药浴"
        android:textColor="@color/gray_dark"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/store_tag_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_score_txt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/store_tag_5"
        android:background="@drawable/store_shape_store_tag"
        android:padding="2dp"
        android:text="驱虫"
        android:textColor="@color/gray_dark"
        android:textSize="8sp" />
</RelativeLayout>