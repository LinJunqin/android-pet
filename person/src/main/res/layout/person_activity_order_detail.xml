<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/theme_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="@dimen/big_word" />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/baselib_ic_back" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李晓"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_marginTop="5dp"
            android:text="123456789"
            android:layout_marginLeft="5dp"

            />
        <TextView
            android:ems="15"
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:text="asdfghjkl"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_goods_avatar"
            android:layout_width="90sp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/person_avatar_default" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toRightOf="@+id/iv_goods_avatar"
            android:layout_marginLeft="20dp"
            android:text="狗粮"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_goods_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_name"
            android:layout_toRightOf="@+id/iv_goods_avatar"
            android:layout_marginTop="10dp"
            android:padding="2sp"
            android:layout_marginLeft="20dp"
            android:text="数量：2"
            android:textColor="@color/gray"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="2sp"
            android:layout_marginRight="10dp"
            android:text="卖家已发货"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_amount"
            android:layout_toRightOf="@+id/iv_goods_avatar"
            android:padding="5sp"
            android:layout_marginLeft="20dp"
            android:text="总价：30.90"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btn_goods_got"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_selector_border_blue"
            android:text="确认收货"
            android:layout_below="@id/tv_order_account"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="12dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_logistics_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:text="物流信息"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_logistics_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_logistics_info"
            android:layout_marginTop="10dp"
            android:padding="2sp"
            android:layout_marginLeft="10dp"
            android:text="物流公司：圆通"
            android:textColor="@color/gray"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/tv_logistics_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_logistics_company"
            android:padding="5sp"
            android:layout_marginLeft="10dp"
            android:text="物流单号：4575686786798"
            android:textColor="@color/gray"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>