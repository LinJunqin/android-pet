<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/theme_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@color/white"
            android:textSize="@dimen/big_word" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_person_info"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_user_url"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_avatar_default" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/civ_user_url"
                    android:text="林俊钦"
                    android:textSize="@dimen/medium_word" />


                <ImageView
                    android:layout_width="@dimen/person_item_arrow_width"
                    android:layout_height="@dimen/person_item_arrow_width"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_ic_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/person_item_height"
                android:layout_marginLeft="@dimen/person_item_margin_left_right"
                android:layout_marginRight="@dimen/person_item_margin_left_right"
                android:layout_marginTop="@dimen/person_item_margin_top"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/person_item_icon_padding_left">

                <ImageView
                    android:id="@+id/iv_order"
                    android:layout_width="@dimen/person_item_icon_width"
                    android:layout_height="@dimen/person_item_icon_width"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_ic_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/person_item_word_margin_left"
                    android:layout_toRightOf="@id/iv_order"
                    android:text="我的订单"
                    android:textSize="@dimen/medium_word" />

                <ImageView
                    android:layout_width="@dimen/person_item_arrow_width"
                    android:layout_height="@dimen/person_item_arrow_width"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_ic_arrow_right" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_appointment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/person_item_height"
                android:layout_marginLeft="@dimen/person_item_margin_left_right"
                android:layout_marginRight="@dimen/person_item_margin_left_right"
                android:layout_marginTop="@dimen/person_item_margin_top"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/person_item_icon_padding_left">

                <ImageView
                    android:id="@+id/iv_appointment"
                    android:layout_width="@dimen/person_item_icon_width"
                    android:layout_height="@dimen/person_item_icon_width"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_ic_appointment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/person_item_word_margin_left"
                    android:layout_toRightOf="@id/iv_appointment"
                    android:text="我的预约"
                    android:textSize="@dimen/medium_word" />

                <ImageView
                    android:layout_width="@dimen/person_item_arrow_width"
                    android:layout_height="@dimen/person_item_arrow_width"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_ic_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/person_item_height"
                android:layout_marginLeft="@dimen/person_item_margin_left_right"
                android:layout_marginRight="@dimen/person_item_margin_left_right"
                android:layout_marginTop="@dimen/person_item_margin_top"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:paddingLeft="@dimen/person_item_icon_padding_left">

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="@dimen/person_item_icon_width"
                    android:layout_height="@dimen/person_item_icon_width"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_ic_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/person_item_word_margin_left"
                    android:layout_toRightOf="@id/iv_setting"
                    android:text="设置"
                    android:textSize="@dimen/medium_word" />

                <ImageView
                    android:layout_width="@dimen/person_item_arrow_width"
                    android:layout_height="@dimen/person_item_arrow_width"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person_ic_arrow_right" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>